
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@softscape/ui": ["libs/ui/src"],
      "@softscape/ui/*": ["libs/ui/src/*"],
      "@softscape/common": ["libs/common/src"],
      "@softscape/common/*": ["libs/common/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}

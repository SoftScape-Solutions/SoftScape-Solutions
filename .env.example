cat > .env.example << 'EOF'
# ============================================
# SOFTSCAPE SOLUTIONS - ENVIRONMENT CONFIG
# ============================================

# Application Environment
NODE_ENV=development

# ============================================
# API CONFIGURATION
# ============================================
API_PORT=3001
API_URL=http://localhost:3001
API_PREFIX=/api/v1

# Database
MONGO_URI=mongodb://localhost:27017/softscape
DATABASE_NAME=softscape

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@softscape.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================
# WEB FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ============================================
# ADMIN DASHBOARD CONFIGURATION
# ============================================
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_ADMIN_APP_URL=http://localhost:3002

# ============================================
# PAYMENT GATEWAY
# ============================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# ============================================
# THIRD PARTY SERVICES
# ============================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# SECURITY
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_DIR=./logs
EOF
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared-ui/*": ["libs/shared-ui/src/*"],
      "@common/*": ["libs/common/src/*"]
    }
  },
  "include": [
    "apps/**/*",
    "libs/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}